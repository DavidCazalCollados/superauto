<div class="dashboard-header mb-5">
  <h1>My Dashboard</h1>
  <h2 class="center-text">Manage Your Listings and Bookings</h2>
</div>

<div class="row">
  <div class="col-md-6">
    <h2>My Bookings</h2>
    <% @bookings.each do |booking| %>
      <div class="booking-card mb-5">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= booking.car.title %></h5>
            <p class="card-text"><%= booking.car.description %></p>
            <p class="card-text">Booked from: <%= booking.start_date %> to <%= booking.end_date %></p>
            <p class="card-text">Total price: $<%= booking.total_price %></p>
            <!-- "View Booking" button removed -->
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-6">
    <h2>My Listings</h2>
    <% @cars.each do |car| %>
      <div class="car-card mb-5">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= car.title %></h5>
            <p class="card-text"><%= car.description %></p>
            <p class="card-text">Price per day: $<%= car.price_per_day %></p>
            <p class="card-text">Owner: <%= car.user.first_name %> <%= car.user.last_name %></p>
            <%= link_to "Edit", edit_car_path(car), class: "btn btn-warning mt-2" %>
            <!-- "Delete" button removed -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
