<div class="car-container d-flex flex-column mt-5">
  <div class="car-picture mb-4">
  </div>
  <div class="d-flex justify-content-between">
    <div class="d-flex flex-column">
      <h2><%= @car.title %></h2>
      <h6 class="mt-4">DESCRIPTION</h6>
      <p><%= @car.description %></p>
    </div>
    <div class="d-flex flex-column" data-controller="total-price">
      <h5 data-total-price-target="pricePerDay"><%= @car.price_per_day %>$ / day</h5>
      <%= render "bookings/booking_form", car: @car , booking: @booking %>
    </div>
  </div>
</div>
