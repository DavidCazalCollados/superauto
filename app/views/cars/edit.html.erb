<h1>Edit Car Listing</h1>

<%= form_with(model: @car, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price_per_day %>
    <%= form.number_field :price_per_day, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Update Car", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', dashboard_path, class: "btn btn-secondary" %>
