<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.rentaclassiccarportugal.com/assets/images/slider/01.jpg);">
    <div class="container">
      <h1>Browse Available Cars for Rent</h1>
    </div>
  </div>
<head>
  <style>
    .search-form {
      margin-bottom: 20px;
    }
    .search-form label {
      font-weight: bold;
    }
    .search-form .form-control {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      margin-bottom: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
    .search-form .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
      padding: 10px 20px;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <div class="container">
    <%= form_with url: cars_path, method: :get, local: true, class: 'search-form' do %>
      <%= label_tag :search, "Search for a car:" %>
      <%= text_field_tag :search, params[:search], class: 'form-control' %>
      <%= submit_tag "Search", class: "btn btn-primary mt-3" %>
    <% end %>
  </div>
</body>

  <div class="cars-list row">
    <% @cars.each do |car| %>
      <div class="col-md-4 mb-5">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= car.title %></h5>
            <p class="card-text"><%= car.description %></p>
            <p class="card-text">Price per day: $<%= car.price_per_day %></p>
            <p class="card-text">Owner: <%= car.user.first_name %> <%= car.user.last_name %></p>
            <%= link_to "See this car", car_path(car.id), class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
