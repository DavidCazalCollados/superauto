<%= simple_form_for [car, booking] do |f| %>
  <%= f.input :start_date,
              as: :string,
              input_html: { data: { action: "change->total-price#price", controller: "datepicker", total_price_target: "startDate" } } %>
  <%= f.input :end_date,
              as: :string,
              input_html: { data: { action: "change->total-price#price", controller: "datepicker", total_price_target: "endDate" } } %>
  <%= f.submit %>
<% end %>
